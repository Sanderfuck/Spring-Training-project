<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="connection.url">jdbc:h2:mem:test;DATABASE_TO_UPPER=false;INIT=runscript from 'classpath:/database/sql/ddl.sql'</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create-drop</property>

        <mapping class="com.nixs.dao.HibernateRoleDao"/>
        <mapping class="com.nixs.dao.HibernateUserDao"/>
    </session-factory>
</hibernate-configuration>